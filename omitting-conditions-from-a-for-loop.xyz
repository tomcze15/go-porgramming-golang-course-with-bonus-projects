package main

import (
	"fmt"
)

func maxMessages(thresh float64) int {
	totalCost := .0
	const costByMessage = 1.0
	const incrementCost = .01

	for i := 0; ; i++ {
		totalCost += costByMessage + (incrementCost * float64(i))
		if totalCost > thresh {
			return i
		}
	}
}

// don't edit below this line

func test(thresh float64) {
	fmt.Printf("Threshold: %.2f\n", thresh)
	max := maxMessages(thresh)
	fmt.Printf("Maximum messages that can be sent: = %v\n", max)
	fmt.Println("===============================================================")
}

func main() {
	test(10.00)
	test(20.00)
	test(30.00)
	test(5.1)
	test(40.00)
	test(50.00)
	test(10000000000000.00)
}
